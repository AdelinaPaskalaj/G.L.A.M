<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="lawoffice.controller.AdminInvoiceGeneratorController">
    <top>
        <Label text="Generate Invoice"
               style="-fx-font-size: 22px; -fx-padding: 15; -fx-font-weight: bold;"/>
    </top>
    <center>
        <VBox spacing="10" padding="20">
            <TextField promptText="Client ID"/>
            <TextField promptText="Case ID"/>
            <TextField promptText="Amount"/>
            <DatePicker promptText="Due Date"/>
            <Button text="Generate"/>
        </VBox>
    </center>
</BorderPane>
